<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="my.deutscheaalla.DinamicMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        >
        <TextView
            android:id="@+id/curs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="74dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="50dp"
            android:text="@string/app_all_words_title" />

        <TextView
            android:id="@+id/all_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="50dp"
            android:text="@string/app_all_words_total" />

        <TextView
            android:id="@+id/vsego_projdeno_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:text="Vsego projdenno:" />

        <TextView
            android:id="@+id/vsego_projdeno_val"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="157dp"
            android:layout_marginTop="50dp"
            android:text="0" />

        <LinearLayout
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"></LinearLayout>
    </RelativeLayout>


</ScrollView>